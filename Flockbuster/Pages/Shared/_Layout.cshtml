<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Flockbuster</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/AddROStyle.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/AdminPageStyle.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/ContactStyle.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/DeleteROStyle.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/EditROStyle.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Index.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/LoginStyle.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/OccupiedObjectsStyle.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/ProfileStyle.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/RentPageStyle.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/ReturnPageStyle.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/SignUpStyle.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/UserOverviewStyle.css" asp-append-version="true" />

    
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-navbar border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Flockbuster</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/RentPage">Rent</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/ReturnPage">Return</a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/ContactPage">Contact</a>
                        </li>
                        
                        <li class="nav-item">
                            @if (Context.Session.GetInt32("ID") is not null && Context.Session.GetInt32("Type") is 1)
                            {
                                <a class="nav-link text-dark" asp-area="" asp-page="/AdminPage">AdminPage</a>
                            }
                            
                        </li>
                        <li class="nav-item">
                            @if (Context.Session.GetInt32("ID") is not null)
                            {
                                <a class="nav-link text-dark" asp-area="" asp-page="/ProfilePage">My Profile</a>
                            }
                        </li>
                        <li class="nav-item">
                            @if (Context.Session.GetInt32("ID") is null)
                            {
                                <a class="nav-link text-dark" asp-area="" asp-page="/LoginPage">Login</a>
                            }
                            else
                            {
                                <a class="nav-link text-dark" asp-area="" asp-page="/Logout">Logout</a>
                            }
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>